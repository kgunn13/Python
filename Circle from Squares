import turtle

def draw_square(some_turtle):
    for i in range(1,5):
        some_turtle.forward(100)
        some_turtle.right(90)

def draw_art():
    window = turtle.Screen()
    window.bgcolor("black")

    #Create the turtle Felicia - Draws a Square
    felicia = turtle.Turtle()
    felicia.shape("triangle")
    felicia.color("violet")
    felicia.speed(3)
    for i in range(1,37) :
        draw_square(felicia)
        felicia.right(10)
    #Create the turtle Bob - Draws a Circle
    #bob = turtle.Turtle()
    #bob.shape("arrow")
    #bob.color("red")
    #bob.circle(100)
    
    window.exitonclick()
    
draw_art()
