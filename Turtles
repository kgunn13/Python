import turtle

def draw_square():
    window = turtle.Screen()
    window.bgcolor("black")
    
    felicia = turtle.Turtle()
    felicia.shape("triangle")
    felicia.color("violet")
    felicia.speed(3)
    felicia.forward(100)
    felicia.right(90)
    felicia.forward(100)
    felicia.right(90)
    felicia.forward(100)
    felicia.right(90)
    felicia.forward(100)
    felicia.right(90)
    
    window.exitonclick()
    
draw_square()
